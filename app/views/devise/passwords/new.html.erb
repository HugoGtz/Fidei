
<%= render 'layouts/navProvisional.html.erb' %>
<% @adorable = rand(1..100) %>
<div style="margin-top: 125px; padding-bottom: 40px;">
        <div class="card card-container">
          <img id="profile-img" class="profile-img-card" src="http://api.adorable.io/avatar/<%= @adorable %>" />
            <p id="profile-name" class="profile-name-card"></p>
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= devise_error_messages! %>
                <h4 class="text-center">¿Olvidaste tu contraseña?</h4>
                <span id="reauth-email" class="reauth-email"></span>
                <%= f.email_field :email, autofocus: true, :placeholder => "Correo", :class => "form-control" %>
                <%= f.submit "Recuperar contraseña", :class => "btn btn-hero btn-block" %>
            <% end %>
            <div class="bottom text-center">
				      ¿Eres Nuevo? <%= link_to 'Registrate ahora.', new_user_registration_path %> 
			      </div>
			      <div class="bottom text-center">
      				¿Ya tienes una cuenta? <%= link_to 'Inicia Sesión.', new_user_session_path %>
      			</div>
        </div><!-- /card-container -->
    </div>






