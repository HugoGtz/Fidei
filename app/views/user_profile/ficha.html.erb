});    
    
    var firebase_data_useer = function firebase_data_useer(){
	
	firebase.auth().onAuthStateChanged(function(user) {
		if (user) {
			
	var commentsRef = firebase.database().ref('users/' + user.uid);
	commentsRef.on('value', function(data) {
		showdataa(data.val());
		
	});
		}
	});
	
}
var showdataa = function(data){
	$("#nombress").html(data.nombre+" "+data.apellidoP+" "+data.apellidoM);
}
